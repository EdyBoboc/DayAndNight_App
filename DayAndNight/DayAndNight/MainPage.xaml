        </StackLayout>

        <StackLayout Grid.Row="1" Margin="20,20,20,40">
            <!--  Bottom section  -->
            <Label
                x:Name="lblListaCamere"
                Margin="0,20,0,0"
                Style="{StaticResource SubHeader}"
                Text="Camere">
                <Label.GestureRecognizers>
